<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons_layout"
        android:paddingRight="20dp"
        android:layout_marginBottom="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="0"
            android:id="@+id/answer"
            android:textColor="@color/white"
            android:gravity="right"
            android:textSize="45dp">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttons_layout"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            
            <TextView
                android:id="@+id/operation_C"
                android:text="C"
                android:background="@drawable/custom_upper"
                style="@style/Button_main"
                />

            <TextView
                android:id="@+id/operation_AC"
                android:text="AC"
                android:background="@drawable/custom_upper"
                style="@style/Button_main"
                />

            <TextView
                android:id="@+id/operation_per"
                android:text="%"
                android:background="@drawable/custom_upper"
                style="@style/Button_main"
                />

            <TextView
                android:id="@+id/operation_div"
                android:text="/"
                android:background="@drawable/custom_right"
                style="@style/Button_main"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num_1"
                android:text="1"
                style="@style/Button_main"
                />

            <TextView
                android:id="@+id/num_2"
                android:text="2"
                style="@style/Button_main"
                />

            <TextView
                android:id="@+id/num_3"
                android:text="3"
                style="@style/Button_main"
                />

            <TextView
                android:id="@+id/operation_mul"
                android:text="X"
                android:background="@drawable/custom_right"
                style="@style/Button_main"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num_4"
                android:text="4"
                style="@style/Button_main"
                />

            <TextView
                android:id="@+id/num_5"
                android:text="5"
                style="@style/Button_main"
                />

            <TextView
                android:id="@+id/num_6"
                android:text="6"
                style="@style/Button_main"
                />

            <TextView
                android:id="@+id/operation_sub"
                android:text="-"
                android:background="@drawable/custom_right"
                style="@style/Button_main"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num_7"
                android:text="7"
                style="@style/Button_main"
                />

            <TextView
                android:id="@+id/num_8"
                android:text="8"
                style="@style/Button_main"
                />

            <TextView
                android:id="@+id/num_9"
                android:text="9"
                style="@style/Button_main"
                />

            <TextView
                android:id="@+id/operation_add"
                android:text="+"
                style="@style/Button_main"
                android:background="@drawable/custom_right"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num_0"
                android:text="0"
                android:layout_width="160dp"
                android:layout_height="70dp"
                android:background="@drawable/custom_round"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"
                android:textColor="@color/white"
                android:padding="10dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:textSize="30dp"
                />

            <TextView
                android:id="@+id/decimal"
                android:text="."
                style="@style/Button_main"
                />

            <TextView
                android:id="@+id/equals"
                android:text="="
                android:background="@drawable/custom_right"
                style="@style/Button_main"
                />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>